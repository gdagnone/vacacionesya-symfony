{% extends 'base.html.twig' %}

{% block title %}Tipo de Operaciones{% endblock %}

{% block body %}


                    <h3 >Lista - Tipo de Operaciones</h3>    
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Detalle</th>
                                    <th>Activo</th>
                                    <th>Orden</th>
                                    <th>acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for tipo_operacione in tipo_operaciones %}
                                <tr>
                                    <td>{{ tipo_operacione.id }}</td>
                                    <td>{{ tipo_operacione.operDetalle }}</td>
                                    <td>{{ tipo_operacione.operActivo ? 'Yes' : 'No' }}</td>
                                    <td>{{ tipo_operacione.operOrden }}</td>
                                    <td >
                                        <a href="{{ path('tipo_operaciones_show', {'id': tipo_operacione.id}) }}"><i class="fas fa-eye"></i> ver</a>&nbsp;&nbsp;
                                        <a href="{{ path('tipo_operaciones_edit', {'id': tipo_operacione.id}) }}"><i class="fas fa-edit"></i> editar</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

            

    <a href="{{ path('tipo_operaciones_new') }}"> <i class="fas fa-plus-circle"></i> Nuevo</a>
{% endblock %}
